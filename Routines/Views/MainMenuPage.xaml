<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:loc="clr-namespace:Routines.Resources.Localization"
             x:Class="Routines.Views.MainMenuPage"
             Title="{Binding Routines}">

    <AbsoluteLayout>

        <Image x:Name="BackgroundImage"
               Aspect="AspectFill"
               Opacity="0.7"
               InputTransparent="True"
               Source="{Binding ., Converter={StaticResource BackgroundToImageConverter}}" />

        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">

            <VerticalStackLayout Padding="20" Spacing="20">

                <Label x:Name="SaludoLabel"
                       FontSize="26"
                       FontAttributes="Bold"
                       Text="{Binding GreetingLabel}"
                       TextColor="Black" />

                <Label Text="{Binding MainMenuPrompt}"
                       FontSize="18"
                       TextColor="Gray" />

                <Grid ColumnSpacing="15" RowSpacing="15"
                      HeightRequest="500">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Fila 1 -->
                    <Frame Grid.Row="0" Grid.Column="0"
                           BackgroundColor="#FFF9C4"
                           CornerRadius="20"
                           HasShadow="True"
                           Padding="10"
                           HeightRequest="150">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHabitsClicked" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="ðŸ“‹"
                                   FontSize="30"
                                   HorizontalOptions="Center" />
                            <Label Text="{Binding MenuMyHabits}"
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="Center"
                                   LineBreakMode="WordWrap"
                                   MaxLines="2" />
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="0" Grid.Column="1"
                           BackgroundColor="#FFF9C4"
                           CornerRadius="20"
                           HasShadow="True"
                           Padding="10"
                           HeightRequest="150">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAddHabitClicked" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="âž•"
                                   FontSize="30"
                                   HorizontalOptions="Center" />
                            <Label Text="{Binding MenuAddHabit}"
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="Center"
                                   LineBreakMode="WordWrap"
                                   MaxLines="2" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Fila 2 -->
                    <Frame Grid.Row="1" Grid.Column="0"
                           BackgroundColor="#FFF9C4"
                           CornerRadius="20"
                           HasShadow="True"
                           Padding="10"
                           HeightRequest="150">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCalendarClicked" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="ðŸ“…"
                                   FontSize="30"
                                   HorizontalOptions="Center" />
                            <Label Text="{Binding MenuCalendar}"
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="Center"
                                   LineBreakMode="WordWrap"
                                   MaxLines="2" />
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="1"
                           BackgroundColor="#FFF9C4"
                           CornerRadius="20"
                           HasShadow="True"
                           Padding="10"
                           HeightRequest="150">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProgressClicked" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="ðŸ“ˆ"
                                   FontSize="30"
                                   HorizontalOptions="Center" />
                            <Label Text="{Binding MenuProgress}"
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="Center"
                                   LineBreakMode="WordWrap"
                                   MaxLines="2" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Fila 3 -->
                    <Frame Grid.Row="2" Grid.Column="0"
                           BackgroundColor="#FFF9C4"
                           CornerRadius="20"
                           HasShadow="True"
                           Padding="10"
                           HeightRequest="150">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnExportClicked" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="ðŸ§¾"
                                   FontSize="30"
                                   HorizontalOptions="Center" />
                            <Label Text="{Binding MenuExport}"
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="Center"
                                   LineBreakMode="WordWrap"
                                   MaxLines="2" />
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="2" Grid.Column="1"
                           BackgroundColor="#FFF9C4"
                           CornerRadius="20"
                           HasShadow="True"
                           Padding="10"
                           HeightRequest="150">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSettingsClicked" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="âš™ï¸"
                                   FontSize="30"
                                   HorizontalOptions="Center" />
                            <Label Text="{Binding MenuSettings}"
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="Center"
                                   LineBreakMode="WordWrap"
                                   MaxLines="2" />
                        </VerticalStackLayout>
                    </Frame>

                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </AbsoluteLayout>
</ContentPage>
