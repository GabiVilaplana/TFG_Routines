<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:loc="clr-namespace:Routines.Resources.Localization"
             x:Class="Routines.Views.MainMenuPage"
             Title="{Binding Routines}">

    <AbsoluteLayout>

        <Image x:Name="BackgroundImage"
               Aspect="AspectFill"
               Opacity="0.7"
               InputTransparent="True"
               Source="{Binding ., Converter={StaticResource BackgroundToImageConverter}}" />

        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">

            <VerticalStackLayout Padding="20" Spacing="25">

                <!-- Ahora enlazamos el saludo dinÃ¡micamente -->
                <Label x:Name="SaludoLabel"
                       FontSize="24"
                       FontAttributes="Bold"
                       Text="{Binding GreetingLabel}" />

                <Label Text="{Binding MainMenuPrompt}"
                       FontSize="18"
                       TextColor="Gray" />

                <Button Text="{Binding MenuMyHabits}" Clicked="OnHabitsClicked" />
                <Button Text="{Binding MenuAddHabit}" Clicked="OnAddHabitClicked" />
                <Button Text="{Binding MenuCalendar}" Clicked="OnCalendarClicked" />
                <Button Text="{Binding MenuProgress}" Clicked="OnProgressClicked" />
                <Button Text="{Binding MenuExport}" Clicked="OnExportClicked" />
                <Button Text="{Binding MenuSettings}" Clicked="OnSettingsClicked" />

            </VerticalStackLayout>
        </ScrollView>
    </AbsoluteLayout>
</ContentPage>
