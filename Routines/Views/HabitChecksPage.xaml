<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Routines.Views.HabitChecksPage"
             Title="{Binding Source={StaticResource Loc}, Path=RecordedCompliances}">

    <AbsoluteLayout>
        <Image x:Name="BackgroundImage"
               Aspect="AspectFill"
               Opacity="0.7"
               InputTransparent="True"
               Source="{Binding ., Converter={StaticResource BackgroundToImageConverter}}" />

        <ListView x:Name="ChecksList"
                  AbsoluteLayout.LayoutBounds="0,0,1,1"
                  AbsoluteLayout.LayoutFlags="All"
                  HasUnevenRows="True"
                  SeparatorVisibility="Default">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding HabitTitulo}"
                                   TextColor="DarkBlue"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy}'}"
                                   FontSize="14"
                                   TextColor="Gray" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </AbsoluteLayout>
</ContentPage>
