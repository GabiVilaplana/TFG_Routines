<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Routines.Views.ExportPage"
             Title="{Binding Source={StaticResource Loc}, Path=ExportTitle}">

    <AbsoluteLayout>
        <Image x:Name="BackgroundImage"
               Aspect="AspectFill"
               Opacity="0.7"
               InputTransparent="True"
               Source="{Binding ., Converter={StaticResource BackgroundToImageConverter}}" />

        <VerticalStackLayout
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            Padding="20"
            Spacing="20"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Label Text="{Binding Source={StaticResource Loc}, Path=GenerateReport}"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <Button Text="{Binding Source={StaticResource Loc}, Path=ExportToPDF}"
                    Clicked="OnExportClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    WidthRequest="200"
                    HeightRequest="50" />
        </VerticalStackLayout>
    </AbsoluteLayout>
</ContentPage>
