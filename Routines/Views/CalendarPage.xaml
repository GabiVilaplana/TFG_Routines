<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:loc="clr-namespace:Routines.Resources.Localization"
             x:Class="Routines.Views.CalendarPage"
             Title="{loc:Translate CustomCalendar}">

    <AbsoluteLayout>

        <Image x:Name="BackgroundImage"
               Aspect="AspectFill"
               Opacity="0.7"
               InputTransparent="True"
               Source="{Binding ., Converter={StaticResource BackgroundToImageConverter}}" />

        <VerticalStackLayout Padding="15" Spacing="10">

            <!-- Encabezado de mes -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="◀" Clicked="OnPreviousMonthClicked" />
                <Label x:Name="MesActualLabel" FontSize="20" FontAttributes="Bold" />
                <Button Text="▶" Clicked="OnNextMonthClicked" />
            </HorizontalStackLayout>

            <!-- Días de la semana -->
            <Grid ColumnSpacing="5" RowSpacing="5" x:Name="DiasSemanaGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>

            <!-- Calendario dinámico -->
            <Grid x:Name="CalendarioGrid"
                  RowSpacing="5" ColumnSpacing="5"
                  Padding="5"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand" />

        </VerticalStackLayout>
    </AbsoluteLayout>
</ContentPage>
